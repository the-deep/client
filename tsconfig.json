{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
        "#components/*": ["./src/components/*"],
        "#dui/*": ["./src/components/ui/*"],
        "#config/*": ["./src/config/*"],
        "#constants": ["./src/constants"],
        "#constants/*": ["./src/constants/*"],
        "#cs": ["./src/cs"],
        "#entities/*": ["./src/entities/*"],
        "#notify": ["./src/notify"],
        "#redux": ["./src/redux"],
        "#redux/*": ["./src/redux/*"],
        "#request": ["./src/request"],
        "#resources/*": ["./src/resources/*"],
        "#hooks/*": ["./src/hooks/*"],
        "#rest": ["./src/rest"],
        "#rest/*": ["./src/rest/*"],
        "#rsca/*": ["./src/vendor/react-store/components/Action/*"],
        "#rscg/*": ["./src/vendor/react-store/components/General/*"],
        "#rsci/*": ["./src/vendor/react-store/components/Input/*"],
        "#rscv/*": ["./src/vendor/react-store/components/View/*"],
        "#rscz/*": ["./src/vendor/react-store/components/Visualization/*"],
        "#rsk/*": ["./src/vendor/react-store/constants/*"],
        "#rsu/*": ["./src/vendor/react-store/utils/*"],
        "#schema": ["./src/schema"],
        "#store": ["./src/store"],
        "#store/*": ["./src/store/*"],
        "#theme": ["./src/theme"],
        "#ts": ["./src/ts"],
        "#utils/*": ["./src/utils/*"],
        "#views/*": ["./src/views/*"],
        "#newViews/*": ["./src/newViews/*"],
        "#widgetComponents/*": ["./src/widgetComponents/*"],
        "#widgets": ["./src/widgets"],
        "#widgets/*": ["./src/widgets/*"],
        "#typings": ["./src/typings"],
        "#typings/*": ["./src/typings/*"],
        "#qbc/*": ["./src/components/questionnaire-builder/*"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": [
    "src"
  ]
}
